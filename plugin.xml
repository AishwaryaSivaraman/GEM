<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="UI.commands.category">
      </category>
      <command
            name="Extract Method"
            categoryId="UI.commands.category"
            id="UI.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="UI.commands.sampleCommand"
            class="ui.handlers.ExtractMethodHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="UI.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="GEM Refactorings"
               mnemonic="M"
               id="UI.menus.sampleMenu">
            <command
                  commandId="UI.commands.sampleCommand"
                  mnemonic="S"
                  id="UI.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="UI.toolbars.sampleToolbar">
            <command
                  commandId="UI.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="UI.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="UI.toolbars.dataToolbar">
            <command
                  commandId="UI.command.dataCommand"
                  icon="icons/sample.gif"
                  mnemonic="DataHandler"
                  tooltip="Collect Data">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="UI.command.dataCommand"
            class="ui.handlers.DataHandler">
      </handler>
   </extension>

</plugin>
